<%- include("partials/header") %>
<br>
<div class="parallax-container">
  <div class="row">
    <div class="col s4"></div>
    <div class="col s4 z-depth-5" style="background-size: cover; background-image: url('https://www.99images.com/photos/wallpapers/3d-abstract/minimalist-phoneandroid-iphone-desktop-hd-backgrounds-wallpapers-1080p-4k-jgsnf.png?v=1577323166');">
      <div class="card" >
        <div class="card-image">
          <form class="col s12" action="/login" method="POST">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input id="icon_prefix" type="text" class="validate" name="email">
                <label for="icon_prefix">Email</label>
              </div>
              <div class="input-field col s12">
                <i class="material-icons prefix">lock</i>
                <input id="icon_prefix" type="password" class="validate" name="password">
                <label for="icon_prefix">Password</label>
              </div>
            </div>
            <div class="row">
              <button class=" btn waves-effect waves-light btn-large col s12" type="submit" name="action">REGISTER
                <i class="material-icons right">person_add</i>
              </button>
              
            </div>
            <div class="row">
              <button class="btn waves-effect waves-light btn-large col s12" type="submit" name="action">LOGIN
                <i class="material-icons right">lock_open</i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col s4"></div>
  </div>
</div>
<%- include("partials/footer") %>