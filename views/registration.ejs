<%- include("partials/header") %>
<div class="container"><br>
  <div class="row">
    <div class="col s12 m3 l3"></div>
    <div class="col s12 m3 l6">
      <div class="card z-depth-5">
        <div class="card-image grey darken-3">
          <img src="https://lh3.googleusercontent.com/proxy/Zo3YHFdl72HdClnleLT9smhPTZoaC-BKN28WuxFWYKmWD6JA-iGqHfb3i73-XyBU4KnJOR7dyRRAKirp6dYBDX0iJSEGxvh2qRwLCKZP46CyW_NQw_pJDMTH" alt="">
          <h4 class="center white-text">REGISTRATION</h4><br>
        </div>
        <div class="card-content">
          <form action="/api/v1/user/register" method="POST">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">person</i>
                <input id="icon_prefix" type="text" class="validate" name="firstName" required>
                <label for="icon_prefix">First name</label>
              </div>
              <div class="input-field col s12">
                <i class="material-icons prefix">person</i>
                <input id="icon_prefix" type="text" class="validate" name="lastName" required>
                <label for="icon_prefix">Lastname</label>
              </div>
              <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input id="icon_prefix" type="email" class="validate" name="email" required>
                <label for="icon_prefix">Email</label>
                <span class="helper-text" data-error="wrong" data-success="right"></span>
              </div>
              <div class="input-field col s12">
                <i class="material-icons prefix">lock</i>
                <input id="icon_prefix" type="password" class="validate" name="password" required>
                <label for="icon_prefix">Password</label>
              </div>
            </div>
            <div class="row">
                <div class="col s2"></div>
                <button class=" btn waves-effect waves-light btn-large col s8" type="submit" name="action">REGISTER
                    <i class="material-icons right">person_add</i>
                </button>
                <div class="col s2"></div>
            </div>
            <div class="row">
                <div class="col s2"></div>
                    <a class="btn waves-effect waves-light btn-large col s8 center-text red" href="/"><i class="material-icons right">cancel</i>CANCEL</a>
                <div class="col s2"></div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col s12 m3 l3"></div>
  </div>
</div>
<%- include("partials/footer") %>

